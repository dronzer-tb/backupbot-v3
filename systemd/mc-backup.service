[Unit]
Description=Minecraft Backup System
After=network.target

[Service]
Type=simple
User=mc-backup
Group=mc-backup
WorkingDirectory=/opt/mc-backup
ExecStart=/usr/bin/node /opt/mc-backup/src/index.js
Restart=on-failure
RestartSec=10s
StandardOutput=journal
StandardError=journal
SyslogIdentifier=mc-backup

# Environment
Environment=NODE_ENV=production

# Security
NoNewPrivileges=true
PrivateTmp=true

# Resource limits
MemoryLimit=512M
CPUQuota=20%

[Install]
WantedBy=multi-user.target
